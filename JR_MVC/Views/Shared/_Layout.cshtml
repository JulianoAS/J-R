            <div class="col-12 col-md-4">
                <img src="~/Img/JRLogo.png" class="img-fluid" alt="...">
            </div>
            <div class="col-12 col-md-4 mb-5">
                <div class="row d-flex justify-content-center">
                    <nav class="nav flex-column nav-footer">
                        <a class="nav-link font-garamond" href="#mainheader">Início</a>
                        <a class="nav-link font-garamond" href="#about">Quem Somos</a>
                        <a class="nav-link font-garamond" href="#services">Nossos Serviços</a>
                        <a class="nav-link font-garamond" href="#contact">Contato</a>
                    </nav>
                </div>
            </div>
            <div class="col-12 col-md-4 mb-5">
                <div class="row d-flex justify-content-center social-media-box">
                    <a href="https://www.instagram.com/j.r_technology/" class="social-media social-media-instagram" target="blank"><i class="fab fa-instagram pt-3"></i></a>
                    @* <a href="" class="social-media social-media-linkedin" target="blank"><i class="fab fa-linkedin pt-3"></i></a>*@
                    <a href="https://wa.me/5511991629030?text=" class="social-media social-media-whatsapp" target="blank"><i class="fab fa-whatsapp pt-3"></i></a>
                    <a href="#" onclick="callModal();" class="social-media social-media-email" target="blank"><i class=" fas fa-mail-bulk pt-3"></i></a>
                </div>

            </div>
        </div>


      
        <a href="https://wa.me/5511991629030?text=" class="social-media-whats-fixed"
           target="_blank">
            <i class="fab fa-whatsapp pt-3"></i>
        </a>


    </footer>

    <div class="copyright">
        <p class="font-garamond text-center pt-2">&copy - @DateTime.Now.Year jrtechnoloy.com.br</p>
    </div>


    @System.Web.Optimization.Scripts.Render("~/bundles/jquery")
    <script src="https://kit.fontawesome.com/2501e7ad25.js" crossorigin="anonymous"></script>
    @System.Web.Optimization.Scripts.Render("~/bundles/popper")
    @System.Web.Optimization.Scripts.Render("~/bundles/bootstrap")
    @System.Web.Optimization.Scripts.Render("~/bundles/site_script")
    @RenderSection("scripts", required: false)

</body>
</html>















